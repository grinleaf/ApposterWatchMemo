<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_list_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_main_list"
            android:layout_width="108dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            app:layout_constraintDimensionRatio="H, 1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@drawable/bg_img_grey"/>

        <TextView
            android:id="@+id/tv_title_main_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            app:layout_constraintStart_toEndOf="@id/iv_main_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:layout_marginHorizontal="16dp"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:dividerColor="#9BDFD8"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_main_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_main_list"
/>

        <TextView
            android:id="@+id/tv_content_main_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="@id/tv_title_main_list"
            app:layout_constraintEnd_toEndOf="@id/tv_title_main_list"
            app:layout_constraintTop_toBottomOf="@id/tv_title_main_list"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerColor="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_list_main"/>
</androidx.constraintlayout.widget.ConstraintLayout>